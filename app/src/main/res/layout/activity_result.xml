<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wilian.jogovelha.ResultActivity"
    android:background="@drawable/fundo1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textViewUserName">

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/profilePicture"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textViewUserName" />
    </FrameLayout>

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewUserName"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"/>

    <Button
        android:text="Compartilhar no Facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb_share_button"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:elevation="10000000dp"
        />

    <Button
        android:onClick="redirecionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="redirecionar"
        android:textAlignment="center"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:elevation="10000000dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewUserName"
        android:layout_alignStart="@+id/textViewUserName">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:gravity="center">

            <TextView
                android:text="VitÃ³rias:"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:id="@+id/textView6"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"/>

            <TextView
                android:text="TextView"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/textViewResVitoria"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
               />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:gravity="center">

            <TextView
                android:text="Empates:"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:id="@+id/textView5"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"/>

            <TextView
                android:text="TextView"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/textViewResEmpate"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                 />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:gravity="center">

            <TextView
                android:text="Derrotas:"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:id="@+id/textView4"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                />

            <TextView
                android:text="TextView"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/textViewResDerrota"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
